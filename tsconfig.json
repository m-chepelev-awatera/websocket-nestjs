{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@access-control/*": ["modules/access-control/*"],
      "@common/*": ["common/*"],
      "@chats/*": ["modules/chats/*"],
      "@lib/*": ["lib/*"],
      "@auth/*": ["modules/auth/*"],
      "@config/*": ["modules/config/*"],
      "@users/*": ["modules/users/*"],
      "@user-roles/*": ["modules/user-roles/*"],
    }
  }
}